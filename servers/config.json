{
    "env": "dev",
    "request": {
        "httpTimeout": 60000, "//": "1 min in milliseconds"
    },
    "frontend": {
        "port":     8000
    },
    "webapp": {
        "protocol": "http:",
        "host":     "localhost",
        "port":     8080,
        "staticContentPath": "../../../Root/web-app",
        "datastore": {
            "mysql": {
                "host"    : "localhost",
                "user"    : "glasslab",
                "password": "glasslab",
                "database": "glasslab_dev"
            },
            "couchbase": {
                "host":     "localhost:8091",
                "bucket":   "glasslab_webapp",
                "password": "glasslab"
            }
        }
    },
    "queue": {
        "host": "127.0.0.1",
        "db": 0,
        "port": 6379
    },
    "sessionstore": {
        "host":     "localhost:8091",
        "bucket":   "glasslab_webapp",
        "password": "glasslab",
        "ttl": 86400, "//": "24 hours in seconds"
    },
    "collector": {
        "port": 8081
    },
    "telemetry": {
        "datastore": {
            "mysql": {
                "host"    : "localhost",
                "user"    : "glasslab",
                "password": "glasslab",
                "database": "glasslab_dev"
            },
            "couchbase": {
                "host":     "localhost:8091",
                "bucket":   "glasslab_gamedata",
                "password": "glasslab"
            }
        }
    },
    "dispatcher": {
        "telemetryGetMax": 20,
        "telemetryPollDelay": 1000,     "//": "1 sec in milliseconds",
        "assessmentDelay"   : 1000,     "//": "1 sec in milliseconds, default 5000",
        "cleanupPollDelay"  : 3600000,  "//": "1 hours in milliseconds",
        "sessionExpire"     : 14400000, "//": "4 hours in milliseconds"
    },
    "auth": {
        "protocol": "http:",
        "host":     "localhost",
        "port":     8082,
        "secret":   "keyboard kitty"
    },
    "validate": {
        "protocol": "http:",
        "host":     "localhost",
        "port":     8083
    },
    "assessment": {
        "port":     8084,
        "datastore": {
            "couchbase": {
                "host":     "localhost:8091",
                "bucket":   "glasslab_assessment",
                "password": "glasslab"
            }
        },
        "queue": {
            "host": "127.0.0.1",
            "db": 0,
            "port": 6379,
            "sessionExpire" : 14400000, "//": "4 hours in milliseconds"
        }
    }
}
